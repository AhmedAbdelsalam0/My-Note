<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtWords"
        android:layout_width="390dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Write Here"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="Hello Every Body\nأهلا بالجميع"
        android:textAlignment="textStart"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size : "
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="#00f"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnBig"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_style"
            android:text="+"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_style"
            android:text="-"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/cbxBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="Bold"
            android:textColor="#000" />

        <CheckBox
            android:id="@+id/cbxUnderline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Underline"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Color : "
            android:textColor="#000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spColor"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:popupElevation="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:text="Font  : "
            android:textColor="#000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spFont"
            android:layout_width="match_parent"
            android:layout_height="27dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alignment :"
            android:textColor="#000"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"

            android:checkedButton="@id/rbLTR"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLTR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left to Right"
                android:textColor="#00f" />

            <RadioButton
                android:id="@+id/rbRTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Right to Left"
                android:textColor="#00f" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:text="File Name : "
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Name"
            android:textColor="#00f"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:text="New"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:text="Save"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnGetFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style"
            android:text="Get File"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>